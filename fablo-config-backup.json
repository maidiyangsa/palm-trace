{
  "$schema": "https://github.com/hyperledger-labs/fablo/releases/download/1.1.0/schema.json",
  "global": {
    "fabricVersion": "2.4.3",
    "tls": false,
    "peerDevMode": false,
    "tools": {
      "explorer": true
    }
  },
  "orgs": [
    {
      "organization": {
        "name": "PalmSafeOrderer",
        "domain": "orderer.palmsafe.com"
      },
      "orderers": [
        {
          "groupName": "palmsafe-orderer-group",
          "type": "solo",
          "instances": 1
        }
      ]
    },
    {
      "organization": {
        "name": "Petani",
        "domain": "petani.palmsafe.com"
      },
      "peer": {
        "instances": 1,
        "db": "CouchDb"
      }
    },
    {
      "organization": {
        "name": "Koperasi",
        "domain": "koperasi.palmsafe.com"
      },
      "peer": {
        "instances": 1,
        "db": "CouchDb"
      }
    },
    {
      "organization": {
        "name": "PabrikKelapaSawit",
        "domain": "pabrikkelapasawit.palmsafe.com"
      },
      "peer": {
        "instances": 1,
        "db": "CouchDb"
      }
    },
    {
      "organization": {
        "name": "Dinas",
        "domain": "dinas.palmsafe.com"
      },
      "peer": {
        "instances": 1,
        "db": "CouchDb"
      }
    }
  ],
  "channels": [
    {
      "name": "referensi-harga-channel",
      "orgs": [
        {
          "name": "Dinas",
          "peers": ["peer0"]
        },
        {
          "name": "PabrikKelapaSawit",
          "peers": ["peer0"]
        },
        {
          "name": "Koperasi",
          "peers": ["peer0"]
        },
        {
          "name": "Petani",
          "peers": ["peer0"]
        }
      ]
    },
    {
      "name": "transaksi-channel",
      "orgs": [
        {
          "name": "PabrikKelapaSawit",
          "peers": ["peer0"]
        },
        {
          "name": "Koperasi",
          "peers": ["peer0"]
        },
        {
          "name": "Petani",
          "peers": ["peer0"]
        }
      ]
    }
  ],
  "chaincodes": [
    {
      "name": "referensi-harga-chaincode",
      "version": "0.0.1",
      "lang": "node",
      "channel": "referensi-harga-channel",
      "directory": "./chaincodes/referensi-harga-chaincode"
    }
  ],
  "hooks": {
    "postGenerate": "perl -i -pe 's/MaxMessageCount: 10/MaxMessageCount: 1/g' \"./fablo-target/fabric-config/configtx.yaml\"; perl -i -pe 's/_VERSION=2.4.3/_VERSION=latest/g' ./fablo-target/fabric-docker/.env; perl -i -pe 's/FABRIC_CA_VERSION=1.5.0/FABRIC_CA_VERSION=latest/g' ./fablo-target/fabric-docker/.env;"
  }
}
